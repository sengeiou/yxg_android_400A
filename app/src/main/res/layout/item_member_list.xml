<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/ic_item_member_list_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_member_list_item_circle"/>

        <TextView
            android:id="@+id/tvItemMemberName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/item_member_text_color"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvItemMemberNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="21dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/item_member_text_color"
            android:textSize="18sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnGoCure"
        android:layout_width="78dp"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"
        android:background="@mipmap/ic_member_list_go_cure"
        android:gravity="center"
        android:text="@string/go_cure"
        android:textColor="@color/color_login_btn"
        android:textSize="15sp"/>

</LinearLayout>