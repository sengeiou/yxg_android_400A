<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_main_watch">

    <TextView
        android:id="@+id/tvChooseSortingMethodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PageTitleText"
        android:text="@string/choose_sorting_method"/>

    <LinearLayout
        android:id="@+id/layChooseSortingMethodFir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvChooseSortingMethodTitle"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="58dp"
        android:layout_marginRight="100dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPain"
                android:layout_width="@dimen/cure_method_bg_size"
                android:layout_height="@dimen/cure_method_bg_size"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_main_center_btn"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPainFir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pain"
                    android:textColor="@color/selector_main_btn_color"
                    android:textSize="@dimen/main_center_text_size"/>

                <TextView
                    android:id="@+id/tvPainSec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pain_sec"
                    android:textColor="@color/selector_main_btn_color"
                    android:textSize="@dimen/main_center_text_size"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivInflammation"
                android:layout_width="@dimen/cure_method_bg_size"
                android:layout_height="@dimen/cure_method_bg_size"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_main_center_btn"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvInflammationFir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/inflammation"
                    android:textColor="@color/selector_main_btn_color"
                    android:textSize="@dimen/main_center_text_size"/>

                <TextView
                    android:id="@+id/tvInflammationSec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/inflammation_sec"
                    android:textColor="@color/selector_main_btn_color"
                    android:textSize="@dimen/main_center_text_size"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layChooseSortingMethodSec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layChooseSortingMethodFir"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="100dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTheLump"
                android:layout_width="@dimen/cure_method_bg_size"
                android:layout_height="@dimen/cure_method_bg_size"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_main_center_btn"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTheLumpFir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/the_lump"
                    android:textColor="@color/selector_main_btn_color"
                    android:textSize="@dimen/main_center_text_size"/>

                <TextView
                    android:id="@+id/tvTheLumpSec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/the_lump_sec"
                    android:textColor="@color/selector_main_btn_color"
                    android:textSize="@dimen/main_center_text_size"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivThreeHigh"
                android:layout_width="@dimen/cure_method_bg_size"
                android:layout_height="@dimen/cure_method_bg_size"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_main_center_btn"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvThreeHighFir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/three_high"
                    android:textColor="@color/selector_main_btn_color"
                    android:textSize="@dimen/main_center_text_size"/>

                <TextView
                    android:id="@+id/tvThreeHighSec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/three_high_sec"
                    android:textColor="@color/selector_main_btn_color"
                    android:textSize="@dimen/main_center_text_size"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/layTvBack"
        style="@style/BackBtnStyle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/page_bottom_two_btn_margin_horizon"
        android:layout_marginBottom="@dimen/back_btn_margin_bottom"/>

</RelativeLayout>