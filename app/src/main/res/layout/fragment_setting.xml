                        android:src="@mipmap/ic_setting_right_triangle"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/laySettingAudioTips"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/setting_item_margin_top"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_setting_item_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/setting_item_padding_hori"
                    android:paddingRight="@dimen/setting_item_padding_hori"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/setting_image_size"
                        android:layout_height="@dimen/setting_image_size"
                        android:layout_marginRight="4dp"
                        android:src="@mipmap/ic_setting_audio_tips"/>

                    <TextView
                        android:id="@+id/tvSettingAudioTips"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/setting_audio_tips"
                        android:textColor="@color/setting_text_color"
                        android:textSize="@dimen/setting_text_size"/>

                    <ImageView
                        android:id="@+id/ivAudioTipState"
                        android:layout_width="98dp"
                        android:layout_height="48dp"
                        android:src="@mipmap/ic_setting_audio_open"/>

                </LinearLayout>

