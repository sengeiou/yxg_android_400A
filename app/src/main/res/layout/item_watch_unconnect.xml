<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvItemWatchName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/setting_title_color"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvItemWatchConnectState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/un_connect"
            android:textColor="@color/setting_title_color"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/ivItemWatchChecked"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="13dp"
            android:src="@mipmap/ic_setting_lg_checked"
            android:visibility="invisible"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/ic_watch_record_divider"/>

</LinearLayout>