<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeFull" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PageTitleText">
        <item name="android:textSize">@dimen/page_title_text_size</item>
        <item name="android:textColor">@color/color_login_btn</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="BackBtnStyle">
        <item name="android:layout_width">228dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:background">@mipmap/ic_back</item>
        <item name="android:text">@string/back</item>
        <item name="android:textSize">@dimen/main_bottom_text_size</item>
        <item name="android:textColor">@color/color_login_btn</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">85dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NextBtnStyle">
        <item name="android:layout_width">238dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:background">@mipmap/ic_btn_next</item>
        <item name="android:text">@string/next</item>
        <item name="android:textSize">@dimen/main_bottom_text_size</item>
        <item name="android:textColor">@color/color_login_btn</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
